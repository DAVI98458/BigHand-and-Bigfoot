loadstring(game:HttpGet("https://raw.githubusercontent.com/xHeptc/Kavo-UI-Library/main/source.lua"))()

local Players = game:GetService("Players")
local player = Players.LocalPlayer

-- Espera o personagem carregar
player.CharacterAdded:Connect(function(char)
    char:WaitForChild("HumanoidRootPart")

    -- BigHand invisível
    for _, handName in ipairs({"LeftHand", "RightHand"}) do
        local hand = char:FindFirstChild(handName) or char:FindFirstChild(handName.."Mesh")
        if hand then
            -- Cria hitbox invisível
            local clone = Instance.new("Part")
            clone.Size = Vector3.new(2, 2, 2) * 15
            clone.Anchored = false
            clone.CanCollide = false
            clone.Transparency = 1
            clone.Massless = true
            clone.Name = "InvisibleBigHand"
            clone.Parent = hand

            local weld = Instance.new("WeldConstraint")
            weld.Part0 = hand
            weld.Part1 = clone
            weld.Parent = clone
        end
    end

    -- BigFoot invisível
    for _, footName in ipairs({"LeftFoot", "RightFoot"}) do
        local foot = char:FindFirstChild(footName)
        if foot then
            -- Cria hitbox invisível
            local clone = Instance.new("Part")
            clone.Size = Vector3.new(2, 2, 2) * 15
            clone.Anchored = false
            clone.CanCollide = false
            clone.Transparency = 1
            clone.Massless = true
            clone.Name = "InvisibleBigFoot"
            clone.Parent = foot

            local weld = Instance.new("WeldConstraint")
            weld.Part0 = foot
            weld.Part1 = clone
            weld.Parent = clone
        end
    end
end)

-- Força reaplicar caso já esteja com personagem
if player.Character then
    player.Character:Destroy()
    player:LoadCharacter()
end
